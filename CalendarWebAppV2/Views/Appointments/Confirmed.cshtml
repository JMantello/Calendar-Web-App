@model EnterDetailsVM;

<div class="card shadow shadow-sm">
    <div class="card-header">
        <h2>
            Confirmed appointment!
        </h2>
    </div>

    <div class="card-body">
        <div class="form-group">
            <label class="control-label pt-1"><strong>Start time:</strong> @Model.DateTimeSelection.ToString("f")</label>
        </div>

        <div class="form-group">
            <label class="control-label"><strong>End time:</strong> @Model.EndTime.ToString("f")</label>
        </div>

        <div class="form-group">
            <label class="control-label"><strong>Duration:</strong> @Model.Duration minutes</label>
        </div>

        <div class="form-group">
            <h5>Thank you!</h5>
        </div>

    </div>
</div>
