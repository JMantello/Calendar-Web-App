@model IEnumerable<Hosts>

@{
    ViewData["Title"] = "Index";
}

<style>
    .dark-bg {
        background-color: rgb(0, 0, 0);
        width: 100%;
        height: 100%;
    }
</style>

<h1 class="pb-3">Current Users</h1>

@foreach (Hosts host in Model)
{
    <div class="card bg-light border-secondary mb-3" @*style="max-width: 540px;"*@>
        <div class="row no-gutters">
            @*<div class="col-md-1">
                <div class="dark-bg"></div>
            </div>*@
            <div class="col-md-12">
                <div class="card-body">
                    <h5 class="card-title">@host.FirstName @host.LastName</h5>
                    <p class="card-text">@host.Email</p>
                    @if (!String.IsNullOrEmpty(host.Phone))
                    {
                        <p class="card-text">@host.Phone</p>
                    }
                    <div class="text-center">
                        <a class="btn btn-secondary" asp-controller="Users" asp-action="Appointments" asp-route-userId="@host.Id">View Appointments</a>
                        <a class="btn btn-secondary" asp-controller="Appointment" asp-action="Schedule" asp-route-userId="@host.Id">Schedule an Appointment</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

}


